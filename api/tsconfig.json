{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    // TODO: path mapping
    /*"paths": {
      "@": [
        "src/"
      ],
      "@users": [
        "src/users"
      ],
      "@docs": [
        "src/course-docs"
      ],
      "@posts": [
        "src/posts"
      ],
      "@auth": [
        "src/auth"
      ],
      "@shared": [
        "src/shared"
      ]
    },*/
    "checkJs": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "pretty": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es2019",
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules/",
    "typings/"
  ]
}