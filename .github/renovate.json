{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "group:allNonMajor"],
  "schedule": ["before 12pm on Monday"],
  "labels": ["type: dependencies"],
  "branchPrefix": "deps/",
  "prConcurrentLimit": 10,
  "timezone": "Europe/Paris",
  "npm": {
    "packageRules": [
      {
        "matchPaths": ["api/**"],
        "groupName": "Backend dependencies",
        "addLabels": ["target: backend", "type: dependencies"],
        "reviewers": ["noftaly"],
        "excludePackagePatterns": [".*eslint.*"]
      }, {
        "matchPaths": ["site/**"],
        "groupName": "Frontend dependencies",
        "addLabels": ["target: frontend", "type: dependencies"],
        "reviewers": ["iv-stpn"],
        "excludePackagePatterns": [".*eslint.*"]
      }, {
        "matchDepTypes": ["engines"],
        "enabled": false
      }, {
        "matchPackagePrefixes": ["@mikro-orm/"],
        "enabled": false
      }, {
        "groupName": "ESLint for Backend",
        "matchPaths": ["api/**"],
        "addLabels": ["target: backend", "type: dependencies"],
        "reviewers": ["noftaly"],
        "matchPackagePatterns": [".*eslint.*"]
      }, {
        "groupName": "ESLint for Frontend",
        "matchPaths": ["site/**"],
        "addLabels": ["target: frontend", "type: dependencies"],
        "reviewers": ["iv-stpn"],
        "matchPackagePatterns": [".*eslint.*"]
      }
    ]
  }
}
